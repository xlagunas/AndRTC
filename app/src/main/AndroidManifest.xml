<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.xlagunas.andrtc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="cat.xlagunas.andrtc.CustomApplication">

        <activity android:name="cat.xlagunas.andrtc.view.activity.LoginActivity"/>

        <activity android:name="cat.xlagunas.andrtc.view.activity.MainActivity"/>

        <activity android:name="cat.xlagunas.andrtc.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GOOGLE PUSH NOTIFICATIONS -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="cat.xlagunas.andrtc" />
            </intent-filter>
        </receiver>
        <service
            android:name=".gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name=".data.gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name=".data.gcm.RegistrationIntentService"
            android:exported="false">
        </service>
        <!--END OF PUSH NOTIFICATION SECTION -->

    </application>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>
