<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/main_card_style"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/contact_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:id="@+id/contact_fullname"
            tools:text="Xavier Lagunas Calpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/contact_thumbnail"
            android:layout_toRightOf="@id/contact_thumbnail"
            android:layout_alignTop="@id/contact_thumbnail"
            />

        <TextView
            android:id="@+id/contact_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="xlagunas"
            android:layout_below="@id/contact_fullname"
            android:layout_toEndOf="@id/contact_thumbnail"
            android:layout_toRightOf="@id/contact_thumbnail"
            android:layout_alignBaseline="@id/contact_thumbnail"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>