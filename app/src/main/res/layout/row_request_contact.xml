<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/contact_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/add_friend_button"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Xavier Lagunas Calpe"/>

    <ImageView
        android:id="@+id/contact_thumbnail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignTop="@id/contact_fullname"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:src="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/contact_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_fullname"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@id/add_friend_button"
        android:textSize="14sp"
        tools:text="xlagunas"/>

    <ImageButton
        android:id="@+id/add_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_person_add"
        />

</RelativeLayout>